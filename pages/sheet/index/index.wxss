/* pages/sheet/index/index.wxss */
.sheet-index {
    height: 100%;
    padding-bottom: 100rpx;
    box-sizing: border-box;
}
.sheet-index-list {
    display: flex;
    flex-wrap: wrap;
}
.list-item {
    margin-left: 2.5%;
    margin-top: 18rpx;
    flex-shrink: 0;
    width: 30%;
    background: #fff;
}
.item-image {
    width: 100%;
    border-radius: 6rpx;
}
.item-name {
    display: -webkit-box;
    font-size: 26rpx;
    color: #666666;
    letter-spacing: 2rpx;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
}