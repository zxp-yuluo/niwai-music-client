/* components/home/recommend/sheet/sheet.wxss */
@import '/iconfont/iconfont.wxss';

.sheet-head {
    margin: 50rpx 30rpx 30rpx 30rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.sheet-head-left {
    font-size: 36rpx;
    font-weight: 700;
}

.sheet-head-right {
    padding: 16rpx 0 16rpx 20rpx;
    font-size: 24rpx;
    color: #666666;
}

.sheet-head-right .iconfont {
    margin-left: 10rpx;
    font-size: 24rpx;
}

.sheet-body-wrap {
    padding-right: 30rpx;
}

.sheet-body {
    display: flex;
    flex-wrap: nowrap;
    box-sizing: border-box;
}

.sheet-info {
    flex-shrink: 0;
    margin-left: 30rpx;
    width: 200rpx;
}

.sheet-info:last-of-type {
    padding-right: 30rpx;
}

.cover {
    width: 200rpx;
    height: 200rpx;
}

.cover .image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 16rpx;
}

.describe {
    margin-top: 16rpx;
    display: -webkit-box;
    font-size: 24rpx;
    color: #222;
    letter-spacing: 2rpx;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    
}

.temp {
    font-size: 30rpx;
    color: #fafafa;
}