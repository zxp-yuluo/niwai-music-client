/* components/sheet/index/navbar/navbar.wxss */
@import '/iconfont/iconfont.wxss';

.custom-nav-bar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
}

.content {
    display: flex;
    align-items: center;
    color: #ffffff;
}

.custom-nav-bar-left {
    padding-left: 30rpx;
    display: flex;
    align-items: center;
    font-size: 48rpx;
    box-sizing: border-box;
}

.custom-nav-bar-left,
.custom-nav-bar-right {
    flex-shrink: 0;
}

.custom-nav-bar-center {
    flex: 1;
    font-size: 36rpx;
    display: flex;
    justify-content: center;
    overflow: hidden;
}
.words {
    white-space: nowrap;
    float: left;
}

@keyframes sheetNameScroll {
    0% {
        transform: translateX(342rpx);
    }
    
    100% {
        transform: translateX(-100%);
    }
}
.title {
    animation-name: sheetNameScroll;
    animation-duration: 6s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
}
